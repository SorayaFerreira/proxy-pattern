{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "rootDir": "./src/",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": { "transpileOnly": true },
  "include": ["src/**/*"],
}
